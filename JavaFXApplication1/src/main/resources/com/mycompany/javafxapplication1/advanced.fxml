<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.controller.AdvancedController">

    <left>
        <VBox spacing="20"
              style="-fx-padding: 20; -fx-background-color: #1A5675; -fx-pref-width: 200;">

            <Label text="Management"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <Button fx:id="userManageBtn"
                    text="User Management"
                    prefWidth="160"
                    onAction="#openUserManagement"
                    style="-fx-background-color: white;" />

            <Button fx:id="fileManageBtn"
                    text="File Management"
                    prefWidth="160"
                    onAction="#openFileManagement"
                    style="-fx-background-color: white;" />

            <Button fx:id="logBtn"
                    text="Logs"
                    prefWidth="160"
                    onAction="#openLogView"
                    style="-fx-background-color: white;" />

            <Pane VBox.vgrow="ALWAYS" />

            <Button fx:id="backBtn"
                    text="Back"
                    prefWidth="160"
                    onAction="#goBack"
                    style="-fx-background-color: white;" />

            <Button fx:id="logoutBtn"
                    text="Logout"
                    prefWidth="160"
                    onAction="#logout"
                    style="-fx-background-color: #FF6666; -fx-text-fill: white;" />

        </VBox>
    </left>

    <center>
        <VBox spacing="15"
              style="-fx-padding: 30; -fx-background-color: #E8F1F5;">

            <Label text="Advanced Panel"
                   style="-fx-font-size: 24px; -fx-text-fill: #333; -fx-font-weight: bold;" />

            <Label text="(System logs will appear here)"
                   style="-fx-font-size: 14px; -fx-text-fill: #555;" />

        </VBox>
    </center>

</BorderPane>