<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.controller.UserManagementController">

    <left>
        <VBox spacing="20"
              style="-fx-padding: 20; -fx-background-color: #1A5675; -fx-pref-width: 200;">

            <Label text="Menu"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <Button text="Back"
                    fx:id="backBtn"
                    prefWidth="160"
                    onAction="#goBack"
                    style="-fx-background-color: white;" />

            <Separator />

            <Label text="Account"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

            <Button fx:id="updatePasswordBtn"
                    text="Update Password"
                    prefWidth="160"
                    onAction="#updatePassword"
                    style="-fx-background-color: white;" />

            <Button fx:id="deleteAccountBtn"
                    text="Delete Account"
                    prefWidth="160"
                    onAction="#deleteAccount"
                    style="-fx-background-color: white;" />
            
            <Pane VBox.vgrow="ALWAYS" />

            <Button fx:id="logoutBtn"
                    text="Logout"
                    prefWidth="160"
                    onAction="#logout"
                    style="-fx-background-color: #FF6666; -fx-text-fill: white;" />

        </VBox>
    </left>

    <center>
        <VBox spacing="15"
              alignment="TOP_LEFT"
              style="-fx-padding: 30; -fx-background-color: #E8F1F5;">

            <Label text="User Management"
                   style="-fx-font-size: 24px; -fx-text-fill: #333; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="12">

                <Label text="Username:"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;" />
                <TextField fx:id="usernameField"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           prefWidth="250" editable="false" />

                <Label text="Current Password:"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;" />
                <PasswordField fx:id="currentPassField"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"
                               prefWidth="250" />

                <Label text="New Password:"
                       GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;" />
                <PasswordField fx:id="newPassField"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"
                               prefWidth="250" />

                <Label text="Retype Password:"
                       GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold;" />
                <PasswordField fx:id="retypeField"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"
                               prefWidth="250" />

            </GridPane>

        </VBox>
    </center>

</BorderPane>