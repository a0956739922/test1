<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.javafxapplication1.controller.AdminChangePasswordController"
      spacing="28"
      alignment="TOP_CENTER"
      style="-fx-padding: 40; -fx-background-color: #F7FAFC; -fx-background-radius: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

    <VBox spacing="8" alignment="CENTER">
        <Label fx:id="infoLabel"
               style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #1A2E3B;"/>

        <Label text="Please enter and confirm the new password."
               style="-fx-font-size: 14; -fx-text-fill: #6B7C8A;"/>
    </VBox>

    <Separator maxWidth="420" style="-fx-opacity: 0.4;"/>

    <GridPane hgap="20" vgap="20" maxWidth="480" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints minWidth="160" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="New Password:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #555;"/>

        <PasswordField fx:id="newPassField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       prefHeight="40"
                       style="-fx-font-size: 14; -fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 8;"/>

        <Label text="Retype Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #555;"/>

        <PasswordField fx:id="retypeField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       prefHeight="40"
                       style="-fx-font-size: 14; -fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 8;"/>
    </GridPane>

    <Pane VBox.vgrow="ALWAYS"/>

    <HBox spacing="24" alignment="CENTER">
        <Button fx:id="cancelBtn" text="Cancel" prefWidth="160" prefHeight="42"
                onAction="#cancel"
                style="-fx-background-color: transparent; -fx-border-color: #BFD7E5; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: #1A2E3B; -fx-font-size: 15; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <Button fx:id="confirmBtn" text="Confirm" prefWidth="160" prefHeight="42"
                onAction="#savePassword"
                style="-fx-background-color: #2378A6; -fx-text-fill: white; -fx-font-size: 15; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>

</VBox>