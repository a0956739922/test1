<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.javafxapplication1.controller.ViewFileController"
      style="-fx-padding: 20;"
      spacing="12">

    <Label text="View File"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextArea fx:id="contentArea"
              prefRowCount="15"
              wrapText="true"/>

    <HBox spacing="10">
        <Button text="Close" onAction="#closeWindow"/>
    </HBox>

</VBox>
