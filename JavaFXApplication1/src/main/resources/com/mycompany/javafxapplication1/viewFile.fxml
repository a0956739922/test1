<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.javafxapplication1.controller.ViewFileController"
      spacing="24"
      alignment="TOP_CENTER"
      style="-fx-padding: 40; -fx-background-color: #E8F1F5;">

    <VBox spacing="6" alignment="CENTER">
        <Label text="View File"
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1A2E3B;"/>
        <Label text="Read-only file content"
               style="-fx-font-size: 14; -fx-text-fill: #6B7C8A;"/>
    </VBox>

    <VBox VBox.vgrow="ALWAYS"
          style="-fx-background-color: #F7FAFC; -fx-padding: 24; -fx-background-radius: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <TextArea fx:id="contentArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                  style="-fx-font-size: 14; -fx-background-radius: 8; -fx-padding: 10; -fx-control-inner-background: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 8;"/>

    </VBox>

    <HBox spacing="16" alignment="CENTER_RIGHT">
        <Button text="Close" prefWidth="160" prefHeight="42"
                onAction="#closeWindow"
                style="-fx-background-color: transparent; -fx-border-color: #BFD7E5; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: #1A2E3B; -fx-font-size: 15; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

</VBox>