<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.javafxapplication1.controller.FileManagementController">

    <left>
        <VBox spacing="20"
              style="-fx-padding: 20; -fx-background-color: #1A5675; -fx-pref-width: 200;">

            <Label text="Files"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <Button fx:id="createBtn"
                    text="Create"
                    prefWidth="160"
                    onAction="#createFile"
                    style="-fx-background-color: white;" />

            <Button fx:id="updateBtn"
                    text="Update"
                    prefWidth="160"
                    onAction="#updateFile"
                    style="-fx-background-color: white;" />

            <Button fx:id="deleteBtn"
                    text="Delete"
                    prefWidth="160"
                    onAction="#deleteFile"
                    style="-fx-background-color: white;" />

            <Button fx:id="uploadBtn"
                    text="Upload"
                    prefWidth="160"
                    onAction="#uploadFile"
                    style="-fx-background-color: white;" />

            <Button fx:id="downloadBtn"
                    text="Download"
                    prefWidth="160"
                    onAction="#downloadFile"
                    style="-fx-background-color: white;" />

            <Pane VBox.vgrow="ALWAYS" />

            <Button fx:id="backBtn"
                    text="Back"
                    prefWidth="160"
                    onAction="#goBack"
                    style="-fx-background-color: white;" />

            <Button fx:id="logoutBtn"
                    text="Logout"
                    prefWidth="160"
                    onAction="#logout"
                    style="-fx-background-color: #FF6666; -fx-text-fill: white;" />

        </VBox>
    </left>

    <center>
        <VBox spacing="20"
              style="-fx-padding: 30; -fx-background-color: #E8F1F5;">

            <Label text="Files:"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TableView fx:id="fileTable"
                        prefHeight="400">
                <columns>
                    <TableColumn fx:id="colName" text="Name" prefWidth="90"/>
                    <TableColumn fx:id="colPath" text="Path" prefWidth="165"/>
                    <TableColumn fx:id="colSize" text="Size" prefWidth="130"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
