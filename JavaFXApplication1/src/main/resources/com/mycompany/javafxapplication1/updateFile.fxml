<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.javafxapplication1.controller.UpdateFileController"
      style="-fx-padding: 20;"
      spacing="12">

    <Label text="Update File"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="File Name:"/>
    <TextField fx:id="nameField"/>

    <Label text="File Path:"/>
    <TextField fx:id="pathField"/>

    <Label text="Content:"/>
    <TextArea fx:id="contentArea" prefRowCount="8"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#updateFile"/>
        <Button text="Cancel" onAction="#closeWindow"/>
    </HBox>

</VBox>