<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.javafxapplication1.controller.FileManagementController">

    <left>
        <VBox spacing="24"
              prefWidth="250"
              style="-fx-padding: 30; -fx-background-color: #1A5675;">

            <Label text="Files" styleClass="section"/>

            <Button fx:id="createBtn" text="Create" prefWidth="210" onAction="#createFile"/>
            <Button fx:id="updateBtn" text="Update" prefWidth="210" onAction="#updateFile"/>
            <Button fx:id="deleteBtn" text="Delete" prefWidth="210" onAction="#deleteFile"/>
            <Button fx:id="uploadBtn" text="Upload" prefWidth="210" onAction="#uploadFile"/>
            <Button fx:id="downloadBtn" text="Download" prefWidth="210" onAction="#downloadFile"/>
            <Button fx:id="shareBtn" text="Share" prefWidth="210" onAction="#shareFile"/>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button fx:id="backBtn" text="Back" prefWidth="210" onAction="#goBack"/>
            <Button fx:id="logoutBtn" text="Logout" prefWidth="210"
                    styleClass="danger" onAction="#logout"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="30"
              alignment="TOP_CENTER"
              style="-fx-padding: 40; -fx-background-color: #E8F1F5;">

            <Label text="Files" styleClass="title"/>

            <TableView fx:id="fileTable" VBox.vgrow="ALWAYS" maxWidth="760">
                <columns>
                    <TableColumn fx:id="colOwner" text="Owner" prefWidth="80"/>
                    <TableColumn fx:id="colFilename" text="Filename" prefWidth="120"/>
                    <TableColumn fx:id="colShareTo" text="Share To" />
                    <TableColumn fx:id="colPermission" text="Role" prefWidth="50"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
