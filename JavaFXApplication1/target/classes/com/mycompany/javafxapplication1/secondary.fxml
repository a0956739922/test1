<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.javafxapplication1.controller.SecondaryController">

    <left>
        <VBox spacing="24"
              prefWidth="250"
              style="-fx-padding: 30; -fx-background-color: #1A5675;">

            <Label text="Menu" styleClass="section"/>

            <Button fx:id="userManageBtn" text="User Management" prefWidth="210" onAction="#openUserManagement"/>
            <Button fx:id="fileManageBtn" text="File Management" prefWidth="210" onAction="#openFileManagement"/>
            <Button fx:id="advancedPanelBtn" text="Advanced Panel" prefWidth="210" onAction="#openAdvancedPanel"/>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button fx:id="logoutBtn" text="Logout" prefWidth="210"
                    styleClass="danger" onAction="#logout"/>
        </VBox>
    </left>

    <center>
        <StackPane style="-fx-background-color: #E8F1F5;">
            <Label text="Dashboard Area (Empty for now)"/>
        </StackPane>
    </center>

</BorderPane>
